@model IEnumerable<mertaksublogg.Models.makale>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-md-12">
    <h2>Makaleler</h2>

    <p>
        @Html.ActionLink("Yeni Makale Ekle", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                Kategori Adı
            </th>

            <th>
                Başlık
            </th>

            <th>
                Foto
            </th>
            <th>
                Tarih
            </th>
            <th>
                Okunma
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.kategori.kategoriadi)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.baslik)
                </td>


                <td>
                    <img width="75" src="@item.buyukfoto" />
                </td>
                <td>
                    @String.Format("{0:dd MMMM yyyy }", item.tarih)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.okunma)
                </td>
                <td>
                    @Html.ActionLink("Düzenle", "Edit", new { id = item.makaleid }) |
                    @Html.ActionLink("Detay", "Details", new { id = item.makaleid }) |
                    @Html.ActionLink("Sil", "Delete", new { id = item.makaleid })
                </td>
            </tr>
        }

    </table>
</div>