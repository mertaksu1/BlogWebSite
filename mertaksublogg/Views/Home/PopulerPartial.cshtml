@model IEnumerable<mertaksublogg.Models.makale>

@{
    Layout = null;
}

<div class="content-right-top">
    <h5 class="head">En Çok Tıklananlar</h5>
    @foreach (var item in Model)
    {
        <a href="/Home/MakaleDetay/@item.makaleid/">
            <div class="editor text-center">
                <h3>@item.baslik</h3>
                <p>@item.ozet</p>
                <label>@String.Format("{0:dd MMMM yyyy }", item.tarih)</label>
                <span></span>
            </div>
        </a>
    }


</div>


