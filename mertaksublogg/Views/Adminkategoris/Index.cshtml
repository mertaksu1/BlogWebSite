@model IEnumerable<mertaksublogg.Models.kategori>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-md-12">
    <h2>Kategoriler</h2>

    <p>
        @Html.ActionLink("Yeni Kategori Ekle", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.kategoriadi)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.kategoriadi)
                </td>
                <td>
                    @Html.ActionLink("Düzenle", "Edit", new { id = item.kategoriid }) |
                    @Html.ActionLink("Detay", "Details", new { id = item.kategoriid }) |
                    @Html.ActionLink("Sil", "Delete", new { id = item.kategoriid })
                </td>
            </tr>
        }

    </table>
</div>