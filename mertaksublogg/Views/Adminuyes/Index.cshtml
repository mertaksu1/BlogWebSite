@model IEnumerable<mertaksublogg.Models.uye>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-md-12">
    <h2>Üyeler</h2>

    <p>
        @Html.ActionLink("Yeni Üye Ekle", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.yetki.yetkiadi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.kullaniciadi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.foto)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.yetki.yetkiadi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.kullaniciadi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.email)
                </td>
                <td>
                    <img width="75" src="@item.foto" />
                </td>
                <td>
                    @Html.ActionLink("Düzenle", "Edit", new { id = item.uyeid }) |
                    @Html.ActionLink("Detay", "Details", new { id = item.uyeid }) |
                    @Html.ActionLink("Sil", "Delete", new { id = item.uyeid })
                </td>
            </tr>
        }

    </table>
</div>